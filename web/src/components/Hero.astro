---
import "material-icons/iconfont/filled.css";

import { SITE, NEXT_DATE } from "../config";
---
<style>
  .hero {
    box-sizing: border-box;
    padding: 156rem var(--spacing-unit) 240rem;
    text-align: center;
  }
  h6 {
    margin: 0;
    color: var(--theme-accent);
    font-size: 24rem;
  }
  h1 {
    margin: 30rem 0 0;
    text-transform: uppercase;
    font-size: 80rem;
    line-height: 1.15;
    text-shadow:
      -3px -2px 0 var(--theme-accent),
      1px 5px 0 hsla(267, 12%, 39%, 1);
  }
  p {
    margin: 42rem auto 85rem;
    max-width: 640px;
    font-size: 20rem;
    color: var(--theme-text-light);
  }
  a {
    text-shadow:
      1px 1px 0 hsla(268, 12%, 39%, 1),
      -1px -1px 0 hsla(var(--color-orange), 0.4);
  }
  a span:first-child {
    font-size: 24rem;
    text-transform: uppercase;
    font-family: var(--font-heading);
  }
  a span.material-icons {
    margin-left: -5px;
    font-size: 32rem;
    vertical-align: -7px;
  }
  @media only screen and (max-width: 600px) {
    .hero {
      padding: 148rem calc(var(--spacing-unit) / 2) 231rem;
    }
    h1 {
      margin-top: 22rem;
      font-size: 55rem;
      line-height: 1.1;
    }
    p {
      margin-top: 25rem;
      margin-bottom: 51rem;
      font-size: 16rem;
      line-height: 21rem;
    }
    a span:first-child {
      font-size: 29rem;
      line-height: 38rem;
    }
    a span.material-icons {
      margin-left: -6px;
      font-size: 38rem;
      vertical-align: -8px;
    }
  }
  @media only screen and (max-width: 320px) {
    h1 {
      font-size: 45rem;
    }
  }
</style>
<section class="hero">
  <h6>{NEXT_DATE}</h6>
  <h1>{SITE.title}</h1>
  <p>{SITE.description}</p>
  <a href="#register" class="button">
    <span>Register</span><span class="material-icons">play_arrow</span>
  </a>
</section>